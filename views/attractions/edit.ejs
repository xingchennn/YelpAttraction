<% include  ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit <%= attraction.name %></h1>
    <div style="width:30% ; margin:25px auto">
        <form action="/attractions/<%= attraction._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type = "text" name = "attraction[name]" value= "<%= attraction.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name = "attraction[image]" value= "<%= attraction.image %>">
            </div>
			<div class="form-group">
  				<input class="form-control" type="number" name="cost" value="<%= attraction.cost %>" step="0.01" min="0" required>
			</div>
            <div class="form-group">
                <input class="form-control" type = "text" name = "attraction[description]" value= "<%= attraction.description %>">
            </div>
			<div class="form-group">
   				<label for="location">Location</label>
    			<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
			</div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit!</button>
            </div>
        </form>
        <a href="/attractions">Go Back</a>
    </div>
</div>

<% include  ../partials/footer %>